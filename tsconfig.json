{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "rootDir": "src",
        "outDir": "ts-built"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "src/Main.ts"
    ]
}